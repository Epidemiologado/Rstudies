names(dados)

table(dados$COR)
help(table)


RSdadosh <- subset(dados, dados$DIAGNoSTICO=="homicidio")
RSdadoscr <- subset(dados, dados$DIAGNoSTICO!="homicidio")

edit(dadosh)

table(dadosh$COR)
table(dadoscr$COR)
table(dadosh$USO.DE.aLCOOL)
